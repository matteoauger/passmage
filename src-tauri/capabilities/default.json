{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "shell:allow-open",
        "fs:default",
        "dialog:default",
        "clipboard-manager:allow-write-text",
        {
            "identifier": "fs:allow-app-write",
            "allow": ["$APPDATA/*", "$HOME/*"]
        },
        {
            "identifier": "fs:allow-open",
            "allow": ["$APPDATA/*", "$HOME/*"]
        },
        "clipboard-manager:default"
    ]
}
